{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-admin-web",
  "version": "2.0.0",
  "description": "The admin page to upload a course memo as a PDF for a course",
  "main": "app.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-admin-web.git"
  },
  "scripts": {
    "//": "Webpack installs css and javascript",
    "preinstall": "npx npm-force-resolutions",
    "vendor": "parcel build ./public/js/vendor.js",
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "test": "NODE_ENV=test jest test/unit/*/*.js --passWithNoTests",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "NODE_ENV=development rimraf ./dist && parcel build ./public/js/app/app.jsx && parcel build ./public/js/vendor.js --public-url /kursinfoadmin/pm/static && parcel watch ./public/js/app/app.jsx --public-url /kursinfoadmin/pm/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\""
  },
  "dependencies": {
    "@azure/storage-blob": "^12.4.1",
    "applicationinsights": "^1.8.10",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-handlebars": "^5.2.1",
    "jquery": "^3.5.1",
    "jquery-hoverintent": "^1.10.1",
    "kth-node-access-log": "^0.2.2",
    "kth-node-api-call": "^3.0.13",
    "kth-node-configuration": "^2.0.3",
    "kth-node-express-routing": "^2.0.5",
    "kth-node-i18n": "^1.0.5",
    "kth-node-ldap": "^4.0.1",
    "kth-node-log": "^3.1.3",
    "kth-node-monitor": "^1.1.9",
    "kth-node-passport-cas": "^3.1.15",
    "kth-node-redis": "^3.1.19",
    "kth-node-response": "https://github.com/KTH/kth-node-response#v1.0.0",
    "kth-node-server": "^3.1.2",
    "kth-node-session": "^1.0.4",
    "kth-node-web-common": "^5.1.12",
    "kth-style": "^5.0.13",
    "locale": "^0.1.0",
    "mobx": "^5.15.6",
    "mobx-react": "^5.4.4",
    "passport": "^0.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.9.0",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.5",
    "@babel/plugin-transform-runtime": "^7.13.8",
    "@babel/preset-env": "7.13.8",
    "@babel/preset-react": "^7.12.13",
    "@kth/eslint-config-kth": "^1.0.10",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "chai": "^4.3.3",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "merge-stream": "^2.0.0",
    "mocha": "^8.3.0",
    "mockery": "^2.1.0",
    "nock": "^13.0.11",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "pretty-quick": "^3.1.0",
    "sass": "^1.32.8",
    "zombie": "^6.1.4"
  },
  "resolutions": {
    "node-forge": "0.10.0"
  },
  "engines": {
    "node": "14.0.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}

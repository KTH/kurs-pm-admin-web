{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-admin-web",
  "version": "3.0.0",
  "description": "The admin page to upload a course memo as a PDF for a course",
  "main": "app.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-admin-web.git"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx npm-force-resolutions",
    "vendor": "parcel build ./public/js/vendor.js",
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "test": "NODE_ENV=test jest test/unit/*/*.js --passWithNoTests",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "NODE_ENV=development rimraf ./dist && parcel build ./public/js/app/app.jsx && parcel build ./public/js/vendor.js --public-url /kursinfoadmin/pm/static && parcel watch ./public/js/app/app.jsx --public-url /kursinfoadmin/pm/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\""
  },
  "dependencies": {
    "@azure/storage-blob": "^12.6.0",
    "@kth/kth-node-passport-oidc": "^4.0.36",
    "@kth/kth-node-response": "^1.0.2",
    "@opentelemetry/api": "^1.0.2",
    "@opentelemetry/tracing": "^0.24.0",
    "applicationinsights": "^2.1.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "component-registry": "^1.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-handlebars": "^5.3.2",
    "jquery": "^3.6.0",
    "jquery-hoverintent": "^1.10.1",
    "kth-node-access-log": "^0.2.4",
    "kth-node-api-call": "^3.0.16",
    "kth-node-configuration": "^2.0.5",
    "kth-node-express-routing": "^2.0.9",
    "kth-node-i18n": "^1.0.10",
    "kth-node-log": "^3.1.7",
    "kth-node-monitor": "^1.1.12",
    "kth-node-redis": "^3.1.30",
    "kth-node-server": "^3.1.5",
    "kth-node-session": "^2.0.2",
    "kth-node-web-common": "^5.1.16",
    "kth-style": "^6.0.21",
    "mobx": "^5.15.6",
    "mobx-react": "^5.4.4",
    "passport": "^0.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "reactstrap": "^8.9.0",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@kth/eslint-config-kth": "^1.0.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jest-extended": "^0.0.1",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "nodemon": "^2.0.9",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.3.2",
    "prettier-eslint-cli": "^5.0.1",
    "pretty-quick": "^3.1.1",
    "sass": "^1.35.1"
  },
  "resolutions": {
    "node-forge": "0.10.0"
  },
  "engines": {
    "node": "14.2.0"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}

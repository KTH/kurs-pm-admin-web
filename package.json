{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-admin-web",
  "version": "3.0.0",
  "description": "The admin page to upload a course memo as a PDF for a course",
  "main": "app.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-admin-web.git"
  },
  "scripts": {
    "build": "bash ./build.sh prod",
    "build-dev": "bash ./build.sh dev",
    "docker:build": "bash ./docker-build-image.sh dev",
    "docker:run": "bash ./docker-run-image.sh dev",
    "docker": "npm install --development && npm run build && npm prune --production",
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "postinstall": "npm run mini-css-extract-plugin && bash -c 'rm -rf ./dist; rm -rf ./node_modules/.cache/webpack'",
    "mini-css-extract-plugin": "yarn add mini-css-extract-plugin --no-lockfile --ignore-scripts",
    "prepare": "husky install",
    "start": "bash -c 'cat /KTH_NODEJS; NODE_ENV=production node app.js'",
    "start-dev": "bash -c 'NODE_ENV=development concurrently --kill-others -n build,app \"npm run build-dev\" \"nodemon app.js\"'",
    "test": "NODE_ENV=test jest test/unit/*/*.js --passWithNoTests"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.9.0",
    "@babel/runtime": "^7.17.9",
    "@kth/api-call": "^4.0.36",
    "@kth/kth-node-passport-oidc": "^4.1.6",
    "@kth/kth-node-response": "^1.0.5",
    "@kth/kth-node-web-common": "^7.0.9",
    "@kth/kth-reactstrap": "^0.4.51",
    "@kth/log": "^4.0.1",
    "@kth/monitor": "^3.0.23",
    "@kth/server": "^4.0.2",
    "@kth/session": "^3.0.2",
    "@opentelemetry/api": "^1.1.0",
    "@opentelemetry/sdk-trace-base": "^1.2.0",
    "applicationinsights": "^2.2.2",
    "axios": "^0.26.1",
    "body-parser": "^1.19.2",
    "cacheable-lookup": "^6.0.4",
    "cheerio": "^1.0.0-rc.10",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-fileupload": "^1.3.1",
    "express-handlebars": "^6.0.3",
    "express-session": "^1.17.2",
    "jquery": "^3.6.0",
    "jquery-hoverintent": "^1.10.2",
    "kth-node-access-log": "^0.2.7",
    "kth-node-configuration": "^2.0.10",
    "kth-node-express-routing": "^2.0.12",
    "kth-node-i18n": "^1.0.12",
    "kth-node-redis": "^3.1.38",
    "kth-style": "^7.0.27",
    "os": "^0.1.2",
    "passport": "^0.5.2",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.2",
    "react-router-dom": "^6.2.2",
    "reactstrap": "^9.0.1",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@kth/eslint-config-kth": "^3.0.10",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@types/jest": "^27.4.1",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "decache": "^4.6.1",
    "eslint": "^8.12.0",
    "file-loader": "^6.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.15",
    "null-loader": "^4.0.1",
    "path": "^0.12.7",
    "prettier": "^2.6.2",
    "prettier-eslint-cli": "^6.0.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "set-value": "^4.1.0",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "engines": {
    "node": "16"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}

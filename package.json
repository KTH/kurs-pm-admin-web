{
  "//": "JSHint configuration - http://jshint.com/docs/options/",
  "name": "kurs-pm-admin-web",
  "version": "3.0.0",
  "description": "The admin page to upload a course memo as a PDF for a course",
  "main": "app.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "uri": "git+https://github.com/KTH/kurs-pm-admin-web.git"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx npm-force-resolutions",
    "vendor": "parcel build ./public/js/vendor.js",
    "lint": "eslint . && prettier-eslint --list-different **/*.js",
    "test": "NODE_ENV=test jest test/unit/*/*.js --passWithNoTests",
    "docker": "npm install --development && npm run build && npm prune --production",
    "build": "NODE_ENV=production rm -rf dist && parcel build ./public/js/app/app.jsx && npm run vendor --preserve-comments",
    "build-dev": "NODE_ENV=development rimraf ./dist && parcel build ./public/js/app/app.jsx && parcel build ./public/js/vendor.js --public-url /kursinfoadmin/pm/static && parcel watch ./public/js/app/app.jsx --public-url /kursinfoadmin/pm/static",
    "build-dev-win": "cross-env NODE_ENV=development rimraf ./dist && parcel build ./public/js/app/app.jsx && parcel build ./public/js/vendor.js --public-url /kursinfoadmin/pm/static && parcel watch ./public/js/app/app.jsx --public-url /kursinfoadmin/pm/static",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run build-dev\" \"nodemon --ignore dist/ --ignore public/ app.js\"",
    "start-dev-win": "cross-env NODE_ENV=development concurrently --kill-others -n build,app \"npm run build-dev-win\" \"nodemon --ignore dist/ --ignore public/ app.js\""
  },
  "resolutions": {
    "glob-parent": "5.1.2",
    "node-forge": "1.3.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.8.0",
    "@kth/api-call": "^4.0.36",
    "@kth/kth-node-passport-oidc": "^4.1.6",
    "@kth/kth-node-response": "^1.0.4",
    "@kth/kth-node-web-common": "^7.0.9",
    "@kth/kth-reactstrap": "^0.4.48",
    "@kth/log": "^4.0.1",
    "@kth/monitor": "^3.0.23",
    "@kth/server": "^4.0.1",
    "@kth/session": "^3.0.2",
    "@opentelemetry/api": "^1.0.4",
    "@opentelemetry/tracing": "^0.24.0",
    "applicationinsights": "^2.2.0",
    "axios": "^0.24.0",
    "body-parser": "^1.19.1",
    "component-registry": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "express-handlebars": "^5.3.5",
    "jquery": "^3.6.0",
    "jquery-hoverintent": "^1.10.2",
    "kth-node-access-log": "^0.2.7",
    "kth-node-configuration": "^2.0.10",
    "kth-node-express-routing": "^2.0.12",
    "kth-node-i18n": "^1.0.12",
    "kth-node-redis": "^3.1.37",
    "kth-style": "^7.0.8",
    "mobx": "^5.15.6",
    "mobx-react": "^5.4.4",
    "os": "^0.1.2",
    "passport": "^0.5.2",
    "prop-types": "^15.8.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "reactstrap": "^8.10.1",
    "safe-utils": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@kth/eslint-config-kth": "^2.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "babel-jest": "^27.5.1",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "nodemon": "^2.0.15",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.5.1",
    "prettier-eslint-cli": "^5.0.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.49.0"
  },
  "engines": {
    "node": "16"
  },
  "jshintConfig": {
    "maxerr": 5
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}
